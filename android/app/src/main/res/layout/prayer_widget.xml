<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_premium"
    android:padding="16dp">

    <!-- Header Section: App Name + Hijri Date -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <!-- App Logo/Icon Area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_title"
                android:textColor="#C5A059"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Hijri Date Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_prayer_card"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_hijri_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 Sep 2024"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />
        </LinearLayout>
    </LinearLayout>

    <!-- Prayer Times Grid (5 Columns) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center">

        <!-- Fajr -->
        <LinearLayout
            android:id="@+id/layout_fajr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_prayer_card"
            android:paddingVertical="10dp"
            android:paddingHorizontal="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/widget_fajr_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fajr"
                android:textColor="#C5A059"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/widget_fajr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:30"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Dhuhr -->
        <LinearLayout
            android:id="@+id/layout_dhuhr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_prayer_card"
            android:paddingVertical="10dp"
            android:paddingHorizontal="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/widget_dhuhr_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dhuhr"
                android:textColor="#C5A059"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/widget_dhuhr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Asr -->
        <LinearLayout
            android:id="@+id/layout_asr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_prayer_card"
            android:paddingVertical="10dp"
            android:paddingHorizontal="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/widget_asr_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asr"
                android:textColor="#C5A059"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/widget_asr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:45"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Maghrib -->
        <LinearLayout
            android:id="@+id/layout_maghrib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_prayer_card"
            android:paddingVertical="10dp"
            android:paddingHorizontal="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/widget_maghrib_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maghrib"
                android:textColor="#C5A059"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/widget_maghrib_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:30"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Isha -->
        <LinearLayout
            android:id="@+id/layout_isha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_prayer_card"
            android:paddingVertical="10dp"
            android:paddingHorizontal="4dp">

            <TextView
                android:id="@+id/widget_isha_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isha"
                android:textColor="#C5A059"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/widget_isha_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
