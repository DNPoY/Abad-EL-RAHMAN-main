<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_modern_style"
    android:padding="16dp">

    <!-- Top Bar: Date -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/widget_hijri_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14 Sep 2024"
            android:textColor="#FFD700"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center" />
    </LinearLayout>

    <!-- Prayer Times Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center">

        <!-- Fajr -->
        <LinearLayout
            android:id="@+id/layout_fajr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_item_bg"
            android:padding="4dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fajr"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:id="@+id/widget_fajr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:30"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Dhuhr -->
        <LinearLayout
            android:id="@+id/layout_dhuhr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
             android:background="@drawable/widget_item_bg"
            android:padding="4dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dhuhr"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:id="@+id/widget_dhuhr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Asr -->
        <LinearLayout
            android:id="@+id/layout_asr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
             android:background="@drawable/widget_item_bg"
            android:padding="4dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asr"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:id="@+id/widget_asr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:45"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Maghrib -->
        <LinearLayout
            android:id="@+id/layout_maghrib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
             android:background="@drawable/widget_item_bg"
            android:padding="4dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maghrib"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:id="@+id/widget_maghrib_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:30"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Isha -->
        <LinearLayout
            android:id="@+id/layout_isha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
             android:background="@drawable/widget_item_bg"
            android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isha"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:id="@+id/widget_isha_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
